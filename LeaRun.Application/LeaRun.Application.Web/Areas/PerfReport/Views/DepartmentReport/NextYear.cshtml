@{
    ViewBag.Title = "下一年度改进报告";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<style>
    .report-title {
        text-align: center;
        font-size: 18px;
        font-weight: 600;
    }

        .report-title label {
            font-size: 18px;
        }

    .ui-jqgrid tr.jqgrow td {
        white-space: normal !important;
        height: auto;
        vertical-align: text-top;
        padding-top: 2px;
    }

    .ui-widget-content {
        border: 1px solid #ccc !important;
    }
</style>
<script>
    var jxbm = '',
        unitcode = ''
    $(function () {
        InitialPage();
        //GetGridTale();
    });
    //初始化页面
    function InitialPage() {
        $('#textarea_content').css('width', '100%');
        $('#textarea_content').css('height', $(window).height() - 163.5);

        //加载年度数据
        $.SetForm({
            url: "../../PerfConfig/YearSetting/GetYearsJson",
            param: { forSearch: false },
            success: function (data) {
                jxbm = data[0].ItemValue;
                $("#year .dropdown-text").html(data[0].ItemText).attr('data-value', jxbm);
                $("#title-year").html(data[0].ItemText);
                $.each(data, function (id, item) {
                    var row = '<li><a data-value="' + item.ItemValue + '">' + item.ItemText + '</a></li>';
                    $('#year').find('ul').append(row);
                });
                //年度选中，生成查询条件
                $("#year .dropdown-menu li").click(function () {
                    var text = $(this).find('a').html();
                    jxbm = $(this).find('a').attr('data-value');
                    $("#year .dropdown-text").html(text).attr('data-value', jxbm);
                    $("#title-year").html(text);
                });
            }
        });
        // 加载科室数据
        $.SetForm({
            url: "GetDepartmentsJson",
            param: { jxbm: jxbm },
            success: function (data) {
                unitcode = data[0].ItemValue;
                $("#unit .dropdown-text").html(data[0].ItemText).attr('data-value', unitcode);
                $("#title-dept").html(data[0].ItemText);
                $.each(data, function (id, item) {
                    if (item.ItemText != null) {
                        var row = '<li><a data-value="' + item.ItemValue + '">' + item.ItemText + '</a></li>';
                        $('#unit').find('ul').append(row);
                    }
                });
                //科室选中，生成查询条件
                $("#unit .dropdown-menu li").click(function () {
                    var text = $(this).find('a').html();
                    unitcode = $(this).find('a').attr('data-value');
                    $("#unit .dropdown-text").html(text).attr('data-value', unitcode);
                    $("#title-dept").html(text);
                });
            }
        });
        // 加载下一年度改进报告数据
        GetNextYearReport();
        //查询事件
        $("#btn_Search").click(function () {
            //$('#gridTable').jqGrid('setGridParam', {
            //    url: 'GetNextYearReportList',
            //    postData: {
            //        "queryJson": JSON.stringify({
            //            jxbm: jxbm,
            //            deptcode: unitcode
            //        })
            //    },
            //    page: 1
            //}).trigger('reloadGrid');
            // 加载下一年度改进报告数据
            GetNextYearReport();
        });
    }
    // 加载下一年度改进报告数据
    function GetNextYearReport() {
        $.SetForm({
            url: "GetNextYearReportList",
            param: {
                "queryJson": JSON.stringify({
                    jxbm: jxbm,
                    deptcode: unitcode
                })
            },
            success: function (data) {
                if (data) {
                    $('#textarea_content').val(data);
                } else {
                    $('#textarea_content').val('');
                }
            }
        });
    }

    //加载分析列表
    function GetGridTale() {
        var selectedRowIndex = 0;
        var $gridTable = $("#gridTable");
        $gridTable.jqGrid({
            url: "GetNextYearReportList",
            postData: {
                "queryJson": JSON.stringify({
                    jxbm: jxbm,
                    deptcode: unitcode
                })
            },
            datatype: "json",
            height: $(window).height() - 163.5,
            //width: $(window).width() / 2 - 23,
            autowidth: true,
            colModel: [
                { label: "序号", name: "XH", index: "XH", hidden: true },
                { label: "下年度改进方面", name: "XNDGJ", index: "XNDGJ", align: "center" }
            ],
            viewrecords: true,//显示检索记录
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'XH',
            sortorder: 'asc'
        });
    }
</script>
<div class="ui-layout" id="layout" style="height: 100%; width: 100%;">
    <div class="center-Panel">
        <div class="titlePanel">
            <div class="title-search">
                <table>
                    <tr>
                        <td>
                            <div id="year" class="btn-group">
                                <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择年度</a>
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                <ul class="dropdown-menu"></ul>
                            </div>
                        </td>
                        <td>
                            <div id="unit" class="btn-group">
                                <a class="btn btn-default dropdown-text" data-toggle="dropdown">选择科室</a>
                                <a class="btn btn-default dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                <ul class="dropdown-menu" style="max-height: 300px; overflow:auto;"></ul>
                            </div>
                        </td>
                        <td style="padding-left: 5px;">
                            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="report-title"><label id="title-year"></label>年<label id="title-dept"></label>下一年度改进报告</div>
        @*<div class="gridPanel">
                <table id="gridTable"></table>
                <div id="gridPager"></div>
            </div>*@
        <div><p>下一年度改进方面:</p></div>
        <div>
            <textarea id="textarea_content" placeholder="无" readonly="readonly" style="resize: none;outline: none;"></textarea>
        </div>
    </div>
</div>

